{
  "name": "@agentset/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/prisma.ts",
    "./trigger": "./src/trigger.ts",
    "./client": "./src/client.ts",
    "./edge": "./src/edge.ts",
    "./browser": "./src/browser.ts"
  },
  "scripts": {
    "postinstall": "pnpm db:generate",
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "db:generate": "dotenv -e ../../.env -v PRISMA_MODE=generate -- prisma generate",
    "db:deploy": "pnpm with-env prisma migrate deploy",
    "db:studio": "pnpm with-env prisma studio",
    "db:migrate": "pnpm with-env prisma migrate dev",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^7.0.0",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0"
  },
  "prisma": {
    "schema": "prisma/schema"
  },
  "devDependencies": {
    "@agentset/eslint-config": "workspace:*",
    "@agentset/prettier-config": "workspace:*",
    "@agentset/tsconfig": "workspace:*",
    "@agentset/validation": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prisma": "^7.0.0",
    "prisma-json-types-generator": "^3.6.2",
    "typescript": "catalog:"
  },
  "prettier": "@agentset/prettier-config"
}
{
  "name": "@agentset/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/prisma.ts",
    "./trigger": "./src/trigger.ts",
    "./client": "./src/client.ts",
    "./edge": "./src/edge.ts",
    "./browser": "./src/browser.ts"
  },
  "scripts": {
    "postinstall": "bun run db:generate",
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "db:generate": "PRISMA_MODE=generate bun --env-file=../../.env run prisma generate",
    "db:deploy": "bun --env-file=../../.env run prisma migrate deploy",
    "db:studio": "bun --env-file=../../.env run prisma studio",
    "db:migrate": "bun --env-file=../../.env run prisma migrate dev",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^7.1.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0"
  },
  "prisma": {
    "schema": "prisma/schema"
  },
  "devDependencies": {
    "@agentset/eslint-config": "workspace:*",
    "@agentset/prettier-config": "workspace:*",
    "@agentset/tsconfig": "workspace:*",
    "@agentset/validation": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prisma": "^7.1.0",
    "prisma-json-types-generator": "^4.0.1",
    "typescript": "catalog:"
  },
  "prettier": "@agentset/prettier-config"
}